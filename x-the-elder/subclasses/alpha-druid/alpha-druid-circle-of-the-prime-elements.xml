                <element name="Water Elemental Form" type="Archetype Feature" source="r/Unearthed Arcana" id="ID_SWECKY_RDDT_UA_ARCHETYPE_FEATURE_PRIME_ELEMENTS_WATER_ELEMENTAL_FORM">
