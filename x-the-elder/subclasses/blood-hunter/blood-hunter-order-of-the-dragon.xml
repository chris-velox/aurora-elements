                <grant type="Condition" id="ID_INTERNAL_CONDITION_DAMAGE_RESISTANCE_POISON" requirements="ID_DM_OOTD_ARCHETYPE_FEATURE_DRACONIC_BLOODLINE_GREEN" />
                <grant type="Condition" id="ID_INTERNAL_CONDITION_DAMAGE_RESISTANCE_FIRE" requirements="ID_DM_OOTD_ARCHETYPE_FEATURE_DRACONIC_BLOODLINE_BRASS||ID_DM_OOTD_ARCHETYPE_FEATURE_DRACONIC_BLOODLINE_GOLD||ID_DM_OOTD_ARCHETYPE_FEATURE_DRACONIC_BLOODLINE_RED" />
